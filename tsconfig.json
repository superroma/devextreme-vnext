{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "composite": true,
    "types": ["vitest", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@devextreme-vnext/core": ["packages/core/src/index.ts"],
      "@devextreme-vnext/core/*": ["packages/core/src/*"],
      "@devextreme-vnext/components": ["packages/components/src/index.tsx"],
      "@devextreme-vnext/components/*": ["packages/components/src/*"],
      "@devextreme-vnext/integrations": ["packages/integrations/src/index.ts"],
      "@devextreme-vnext/integrations/*": ["packages/integrations/src/*"]
    }
  },
  "references": [
    { "path": "packages/core" },
    { "path": "packages/components" },
    { "path": "packages/integrations" }
  ],
  "include": []
}
